
@model List<Customer>
@*@model List<Mvc.Models.Customer>*@
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <title>Customer - List</title>
    <div class="container">
        <h3>Customer List</h3>

        <div class="row">
            <div class="col-4">
                <description font-type="Bold"></description>

                @* <partial name="_EmployeePartial" model="EmployeeContext.employees" /> *@
                @await Component.InvokeAsync("EmployeeComponent", new{@role="Manager"})
            </div>
            <div class="col-8">
            <a class="add-operation" asp-action="Create" asp-controller="Home">Create</a>
            <table class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Age</th>
                        <th>Operation</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>
                            <td>@item.Age</td>
                            <td>
                                <a class="update-operation" asp-action="Update" asp-controller="Home" asp-route-id="@item.Id">Update</a>
                                <a class="remove-operation" asp-action="Remove" asp-controller="Home" asp-route-id="@item.Id">Remove</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
            </div>
        </div>
       
