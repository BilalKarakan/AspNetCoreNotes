@model Mvc.Models.Customer
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

        
            <h3>Update - Customer</h3>
            <form asp-action="Update" asp-controller="Home" method="post">
                <input type="hidden" name="id" value="@Model.Id"/>
                <div class="form-group">
                    <label>First Name:</label>
                    <input class="form-control" asp-for="@Model.FirstName"/>
                </div>
                <div class="form-group">
                    <label>Last Name:</label>
                    <input class="form-control" asp-for="@Model.LastName" />
                </div>
                <div class="form-group">
                    <label>Age:</label>
                    <input class="form-control" asp-for="@Model.Age" />
                </div>
                <div class="form-group text-right">
                    <button class="btn btn-primary" type="submit">Save</button>
                </div>
            </form>
        